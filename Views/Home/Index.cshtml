@{
    ViewData["Title"] = "Login Page";
}

@model User

<div class="text-center">
    <h1>Welcome! Tell us a little about yourself before we get started.</h1>
    @* modificada la accion.de MakeUser a CreateUser *@
    <form asp-action="CreateUser" asp-controller="Home" method="post" class="col-4 mx-auto p-4">
        <div class="mb-3">
            <label for="Name">What is your name?</label>
            <input asp-for="Name" class="form-control" name="Name"> @* agregado name="Name" *@ 
            <span asp-validation-for="Name" class="text-danger"></span> @* agregado Spam que muestra el error *@ 
        </div>
        <div class="mb-3">
            <label for="Location">(Optional) Where are you from?</label>
            <input asp-for="Location" class="form-control" name="Location"> @* agregado name="Location" *@ 
        </div>
        <div class="mb-3">
            <input type="submit" value="Submit" class="btn btn-primary">
        </div>
    </form>
</div>
